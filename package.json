{
  "name": "email-alias-extensions-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@email-alias-extensions/chrome && npm run build --workspace=@email-alias-extensions/firefox",
    "watch": "npm run watch --workspace=@email-alias-extensions/chrome & npm run watch --workspace=@email-alias-extensions/firefox",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "npm test --workspaces"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/webextension-polyfill": "^0.12.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github"
    ]
  }
}
