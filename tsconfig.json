{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": true,

    /* Module Resolution */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,

    /* Environment */
    "types": ["node", "webextension-polyfill"]
  },
  "include": ["packages/**/*", ".eslintrc.js"],
  "exclude": ["node_modules", "**/dist"]
}
