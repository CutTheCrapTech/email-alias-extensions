{
  "compilerOptions": {
    "lib": ["es2024", "dom", "dom.iterable"],
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2024",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,

    /* Bundler mode */
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@common/*": ["packages/common/src/*"]
    },
    "types": ["chrome"]
  },
  "include": ["packages/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "packages/**/*.test.ts",
    "packages/**/*.spec.ts"
  ]
}
