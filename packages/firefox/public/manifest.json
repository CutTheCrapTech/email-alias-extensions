{
  "manifest_version": 3,
  "name": "Email Alias Generator",
  "version": "1.0.0",
  "description": "Generate email aliases using a secret token and domain.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "alias-generator@example.com",
      "strict_min_version": "109.0"
    }
  }
}
