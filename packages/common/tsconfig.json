{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "outDir": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/build.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/__test__",
    "src/crypto-shim.js",
    "src/index.ts",
    "src/popup.ts"
  ]
}
